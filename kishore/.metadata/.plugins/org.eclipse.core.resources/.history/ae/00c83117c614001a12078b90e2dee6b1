package com.pattern;

public class Pattern {

	public static void main(String[] args) {
 for (int i = 0; i < 5; i++) {
	   int k=0;
	
	 for (int j = 0; j<5; j++) {
		 if(j<=i && k<i) {
		
		 System.out.print("*");
	     }
		 else {
	 System.out.print("  ");
       }
	 }
	 System.out.println();
 
 }
	}
}
